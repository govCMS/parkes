name        = GovCMS Parkes
description = Based on Digital Transformation Agencies UI Kit (version 2) and Design Guide. Can be used as is or sub-themed.
screenshot  = screenshot.png
core        = 7.x
engine      = phptemplate

; Remove or override styling that we don't want
stylesheets[all][] = system.base.css
stylesheets[all][] = system.menus.css
stylesheets[all][] = system.messages.css
stylesheets[all][] = system.theme.css
stylesheets[all][] = comment.css
stylesheets[all][] = node.css
stylesheets[all][] = superfish.css

; Regions
regions[header]         = Header
regions[navigation]     = Navigation bar
regions[highlighted]    = Highlighted
regions[help]           = Help
regions[sidebar_first]  = First sidebar
regions[content_top]    = Content top
regions[content]        = Content
regions[sidebar_second] = Second sidebar
regions[footer_top]     = Footer top
regions[footer_bottom]  = Footer bottom
regions[page_top]       = Page top
regions[page_bottom]    = Page bottom

; Set the default values of settings on the theme-settings.php form.
settings[govcms_parkes_breadcrumb]           = yes
settings[govcms_parkes_breadcrumb_home]      = 1
settings[govcms_parkes_breadcrumb_trailing]  = 0
settings[govcms_parkes_breadcrumb_title]     = 0
settings[govcms_parkes_skip_link_anchor]     = main-menu
settings[govcms_parkes_skip_link_text]       = Jump to navigation
settings[govcms_parkes_meta][]               = html5
settings[govcms_parkes_meta][]               = meta
settings[govcms_parkes_rebuild_registry]     = 0

; To add a Panels layout (which can also be used by Display Suite), uncomment
; the line below and see the documentation at: https://drupal.org/node/495654
plugins[panels][layouts] = panels-layouts
